    style="min-height: 90vh; display: flex; justify-content: center; align-items: center;"
  >
    <CarouselHighlightHewan />
  </section>

  <!--! DIVIDER -->

  <section class="story bg-blood text-bone">
    <div class="container row m-auto align-items-center">
      <div
        class="col-12 col-md-6 d-flex flex-column place-center h-fit text-center"
      >
        <p class="title-sm mb-3">QURBANPLUS STORY</p>
        <h1 class="display-lg">Perjalanan QurbanPlus</h1>
        <p class="text-center max-w-sm">
          Qurbanplus hadir sejak tahun 1441 hijriah untuk sebuah ikhtiar dalam
          menyemarakkan serta mengambil bagian mengagungkan syiar Islam pada
          Hari Raya Idul Adha untuk melengkapi kebutuhan teman-teman dalam
          menegakkan ibadah Qurban.
        </p>
        <div class="spacer-44"></div>
        <a href="/story" class="slider-cta">Baca KISAH Kami</a>
      </div>

      <div class="col-12 col-md-6">
        <img
          src="/assets/images/story-homepage.jpg"
          alt=""
          class="img-fluid p-0"
        />
      </div>
    </div>
  </section>

  <section
    class="row bg-bone place-center g-0 gap-20px px-default py-large"
    style="min-height: 90vh;"
  >
    <h1 class="col-12 col-md display-base text-blood text-center">
      Produk <br /> Kami
    </h1>
    <div class="col-12 col-md d-flex place-center relative aspect-square">
      <a
        href="/qurban"
        class="card-link rounded-lg"
        title="Pilihan hewan qurban"
      >
        <div class="layer h-100 w-100 z-1">
          <img
            class="layer img-fluid h-100 object-cover"
            src="/assets/images/thumbnail-produk-qurban.jpg"
            alt="Qurbanplus - Pilih hewan qurban"
          />
          <div class="layer bg-gold multiply"></div>
          <div class="layer texture-sm"></div>
        </div>
        <div class="z-3">
          <a href="/qurban">
            <p class="display-base text-bone">Qurban</p>
          </a>
        </div>
      </a>
    </div>
    <div class="col-12 col-md d-flex place-center g-0 relative aspect-square">
      <a href="/aqiqah" class="card-link" title="Pilihan menu aqiqah">
        <div class="layer h-100 w-100 z-1">
          <img
            class="layer img-fluid h-100 object-cover"
            src="/assets/images/thumbnail-produk-aqiqah.jpg"
            alt="Qurbanplus - Pilih menu Aqiqah QurbanPlus"
          />
          <div class="layer bg-gold multiply"></div>
          <div class="layer texture-sm"></div>
        </div>
        <div class="z-3">
          <a href="/aqiqah">
            <p class="display-base text-bone">Aqiqah</p>
          </a>
        </div>
      </a>
    </div>
