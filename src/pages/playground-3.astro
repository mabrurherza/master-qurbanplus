---
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout>
    <div class="max-w-md py-large m-auto">
        <h1 class="display-lg test text-center">
            Lorem, ipsum dolor sit amet consectetur adipisicing.
        </h1>
        <p class="text-center">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Animi,
            natus sunt eum officia tenetur omnis expedita veniam enim atque
            ratione. In deleniti aliquam repellendus fuga ullam nihil impedit
            labore expedita.
        </p>
    </div>
</BaseLayout>

<div>
    <select id="groupA" onchange="updateGroupBOptions()">
        <option value="">Select group A</option>
        <option value="sword">Sword</option>
        <option value="lance">Lance</option>
    </select>

    <select id="groupB">
        <option value="">Select group B</option>
    </select>
</div>

<style>
    .test {
        text-wrap: balance;
    }
</style>

<script>
    function updateGroupBOptions() {
        const groupASelect = document.getElementById("groupA");
        const groupBSelect = document.getElementById("groupB");
        const selectedGroupA = groupASelect.value;

        // Clear previous options
        groupBSelect.innerHTML = '<option value="">Select group B</option>';

        if (selectedGroupA === "sword") {
            const swordOptions = [
                { value: "one_handed_sword", label: "One Handed Sword" },
                { value: "two_handed_sword", label: "Two Handed Sword" },
                { value: "broadsword", label: "Broadsword" },
                { value: "katana", label: "Katana" },
            ];
            addOptionsToSelect(groupBSelect, swordOptions);
        } else if (selectedGroupA === "lance") {
            const lanceOptions = [
                { value: "bamboo", label: "Bamboo" },
                { value: "double_edged_lance", label: "Double Edged Lance" },
            ];
            addOptionsToSelect(groupBSelect, lanceOptions);
        }
    }

    function addOptionsToSelect(selectElement, options) {
        options.forEach((option) => {
            const optionElement = document.createElement("option");
            optionElement.value = option.value;
            optionElement.textContent = option.label;
            selectElement.appendChild(optionElement);
        });
    }
</script>
