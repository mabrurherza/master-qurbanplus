---
const { DataHewan } = Astro.props;
---

<div class="card card-hewan" data-category={DataHewan.data.jenis}>
    <img
        src={DataHewan.data.share.image}
        alt={`Pilihan hewan QurbanPlus: ${DataHewan.data.namaHewan}`}
        class="aspect-square w-full object-cover"
    />
    <div class="card-body d-flex flex-column gap-3">
        <div
            class="d-flex place-center flex-column justify-content-start"
            style="min-height: 140px;"
        >
            <p class="title-sm mb-3 text-gold">{DataHewan.data.jenis}</p>
            <a href={`/qurban/${DataHewan.slug}`} class="link-blood">
                <p class="display-base text-center text-blood">
                    {DataHewan.data.namaHewan}
                </p>
            </a>
        </div>
        <div class="d-flex flex-column gap-3">
            <div
                class="d-flex justify-content-between py-2 border-top border-bottom border-gold"
            >
                <div class="d-flex flex-column align-items-start gap-1">
                    <p class="subtext text-gold">BOBOT</p>
                    <p class="display-sm text-blood">
                        Â±{DataHewan.data.bobot}kg
                    </p>
                </div>

                <div class="d-flex flex-column align-items-end gap-1">
                    <p class="subtext text-gold">HARGA</p>
                    <p class="display-sm text-blood">
                        RP{
                            new Intl.NumberFormat("id-ID").format(
                                DataHewan.data.harga,
                            )
                        }
                    </p>
                </div>
            </div>
            <div class="row g-0 flex-row gap-2 align-items-center">
                <a
                    href=`/checkout?slug=${DataHewan.slug}`
                    class="col btn btn-primary">PESAN</a
                >
                <a
                    href=`/qurban/${DataHewan.slug}`
                    class="col link-gold link-underline text-center"
                    >Harga Tabungan</a
                >
            </div>
        </div>
    </div>
</div>
