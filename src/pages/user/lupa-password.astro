---
import BaseLayout from "../../layout/BaseLayout.astro";
---

<BaseLayout pageTitle="Ganti Password User">
    <main class="bg-marrow">
        <div
            class="dashboard-container max-w-md py-large px-default row g-0 m-auto"
        >
            <div class="mb-5 d-flex align-items-center flex-column gap-3">
                <h1 class="display-base text-blood w-fit">Lupa Password</h1>
                <p class="w-fit">
                    Kami akan mengirimkan instruksi perubahan password baru ke
                    email Anda.
                </p>
            </div>

            <div>
                <fieldset class="d-flex flex-column gap-4">
                    <div>
                        <label for="exampleFormControlInput1" class="form-label"
                            >Email</label
                        >
                        <input
                            type="email"
                            class="form-control"
                            id="alamatEmail"
                            value=""
                            placeholder="Email"
                            required
                        />
                    </div>

                    <form action="/user/login">
                        <button class="btn btn-primary w-full">KIRIM</button>
                    </form>

                    <div class="d-flex justify-content-center">
                        <a href="/user/login" class="link-gold">Cancel</a>
                    </div>
                </fieldset>
            </div>
        </div>
    </main>
</BaseLayout>
